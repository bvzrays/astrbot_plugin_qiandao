  "label_total_ingots": {
    "description": "元宝数量标签",
    "type": "string",
    "default": "●元宝数量："
  },
  "exchange_points_success_tpl": {
    "description": "积分兑换成功提示模板，可用占位符 {amount}、{points}",
    "type": "string",
    "default": "已兑换积分 {amount}，剩余积分：{points}"
  },
  "exchange_ingots_success_tpl": {
    "description": "元宝兑换成功提示模板，可用占位符 {amount}、{ingots}",
    "type": "string",
    "default": "已兑换元宝 {amount}，剩余元宝：{ingots}"
  }
