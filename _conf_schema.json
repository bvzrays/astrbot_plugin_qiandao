{
  "reward_points_min": {
    "description": "单次奖励积分最小值",
    "type": "int",
    "default": 10
  },
  "reward_points_max": {
    "description": "单次奖励积分最大值",
    "type": "int",
    "default": 50
  },
  "reward_ingot_min": {
    "description": "单次奖励元宝最小值",
    "type": "int",
    "default": 5
  },
  "reward_ingot_max": {
    "description": "单次奖励元宝最大值",
    "type": "int",
    "default": 30
  },
  "reward_points_prob": {
    "description": "奖励积分的概率(0-1)",
    "type": "float",
    "default": 0.5
  },
  
  "exchange_roles": {
    "description": "兑换权限模式（admin_only=仅管理员；self_or_admin=本人或管理员）",
    "type": "string",
    "options": ["admin_only", "self_or_admin"],
    "default": "self_or_admin"
  },
  "storage_scope": {
    "description": "数据统计作用域（group=按群，user=按用户，global=全局）",
    "type": "string",
    "options": ["group", "user", "global"],
    "default": "group"
  },
  "max_rank_list_size": {
    "description": "排行榜显示条数",
    "type": "int",
    "default": 10
  },
  "message_title": {
    "description": "签到成功标题行",
    "type": "string",
    "default": "@小卡拉米，签到成功"
  },
  "message_separator": {
    "description": "分隔线",
    "type": "string",
    "default": "-------------------------"
